rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Images stored by collection UUID
    match /images/{collectionUuid}/{imageFile} {
      // Allow read access if user has access to this collection UUID
      allow read: if request.auth != null &&
                  firestore.exists(/databases/(default)/documents/users/$(request.auth.uid)/collections/$(collectionUuid));

      // Allow write (upload) access if user has access to this collection UUID
      allow write: if request.auth != null &&
                   firestore.exists(/databases/(default)/documents/users/$(request.auth.uid)/collections/$(collectionUuid)) &&
                   request.resource.contentType.matches('image/.*') &&
                   request.resource.size < 10 * 1024 * 1024; // 10MB limit

      // Allow delete access if user has access to this collection UUID
      allow delete: if request.auth != null &&
                    firestore.exists(/databases/(default)/documents/users/$(request.auth.uid)/collections/$(collectionUuid));
    }





    // Deny access to all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
