{
	"name": "phototv",
	"private": true,
	"version": "1.8.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:tv": "vite dev --port 5174 --open /?tv=true",
		"dev:mobile": "vite dev --port 5173 --open /",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"deploy": "npm run build && npx netlify deploy --prod --dir=build",
		"deploy:preview": "npm run build && npx netlify deploy --dir=build",
		"deploy:draft": "npm run build && npx netlify deploy --dir=build --alias=draft",
		"deploy:quick": "npx netlify deploy --prod --dir=build",
		"deploy:firebase": "npm run build && firebase deploy --only hosting",
		"predeploy": "npm run lint && npm run test",
		"netlify:build": "npm run build",
		"netlify:deploy": "npx netlify deploy --prod --dir=build",
		"version": "node scripts/update-version.js",
		"version:sync": "npm run version && npx cap sync",
		"version:build": "npm run version:sync && npm run android:debug",
		"bump": "node scripts/bump-version.js",
		"android:debug": "cd android && ./gradlew assembleDebug",
		"android:release": "cd android && ./gradlew assembleRelease",
		"android:bundle": "cd android && ./gradlew bundleRelease",
		"release": "node scripts/release.js",
		"setup:signing": "node scripts/setup-signing.js"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.0.0",
		"@vitest/browser": "^3.2.3",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"firebase-tools": "^13.0.0",
		"globals": "^16.0.0",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"dependencies": {
		"@capacitor/android": "^7.4.2",
		"@capacitor/app": "^7.0.2",
		"@capacitor/cli": "^7.4.2",
		"@capacitor/core": "^7.4.2",
		"@capacitor/device": "^7.0.2",
		"@sveltejs/adapter-static": "^3.0.8",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"daisyui": "^5.0.46",
		"firebase": "^11.10.0"
	}
}
